#!/bin/sh
set -e

if [ -n "${GITHUB_TOKEN}" ] ; then
    composer config -g github-oauth.github.com "${GITHUB_TOKEN}"
fi

if [ "${APP_ENV}" = "dev" ] || [ "${APP_ENV}" = "test" ] ; then
    rm -f -r public/bundles/*
    until composer install --no-interaction --no-progress --no-suggest --prefer-dist --quiet ; do
        sleep 5
    done
fi

if [ "${APP_ENV}" = "prod" ] ; then
    rm -f -r public/bundles/*
    until composer install --apcu-autoloader --classmap-authoritative --no-dev --no-interaction --no-progress --no-suggest --prefer-dist --optimize-autoloader --quiet ; do
        sleep 5
    done
fi
